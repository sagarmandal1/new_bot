# Environment variables template
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
WEBHOOK_URL=https://your-domain.com/webhook

# Database Configuration
DATABASE_URL=sqlite:///bengali_bot.db
# For PostgreSQL: postgresql://username:password@localhost:5432/bengali_bot

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# Encryption Keys
ENCRYPTION_KEY=your_32_byte_base64_encoded_key_here
SECRET_KEY=your_secret_key_for_sessions_here

# External API Keys
OPENWEATHER_API_KEY=your_weather_api_key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# File Storage
MAX_FILE_SIZE_MB=50
UPLOAD_FOLDER=uploads/

# Notification Settings
DAILY_SUMMARY_TIME=09:00
WEEKLY_SUMMARY_DAY=1
MONTHLY_SUMMARY_DAY=1

# Development Settings
DEBUG=True
LOG_LEVEL=INFO